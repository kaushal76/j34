<?xml version="1.0" encoding="utf-8"?>
<form role = "form">
	<fieldset name = "Theme details">      
		<field name="id" type="hidden" default="0"/> 
			
		<field name="title" type="text" 
		
		label="Theme title"
		description="Please provide a theme title"
		class="input-block-level"
		required="true" 
		filter="string"
		
		/>
	
		<field name="description" type="textarea"
                
            label="Theme description"
            description="Please provide a theme description"
            required="true" 
			class="input-block-level"		
			menu_published="0"
            cols="100"
            rows="8"
            filter="safehtml" 
			
		/>  
		
		<field name="user_id" type="users"
                
            label="Theme leader"
			description="Please select a theme leader"
			class="input-block-level"
			input-type = "list"
			required = "true"
			 /> 
			
		/>  
		
         <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />
	</fieldset>

</form>
