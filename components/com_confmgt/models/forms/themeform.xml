<?xml version="1.0" encoding="utf-8"?>
<form role = "form">
	<fieldset name = "Theme details">      
		<field name="id" type="hidden" default="0"/>
		<field name="user_id" type="hidden"/>

			
		<field name="title" type="text" 
		
		label="Theme title"
		description="Please provide a theme title"
		class="input-block-level"
		required="true" 
		filter="string"
		
		/>
	
		<field name="description" type="textarea"
                
            label="Theme description"
            description="Please provide a theme description"
            required="true" 
			class="input-block-level"		
			menu_published="0"
            cols="100"
            rows="8"
            filter="safehtml" 
			
		/>  

		<field name="leader" type="subform"
			   formsource="components/com_confmgt/models/forms/themeleader.xml"
			   required = "true"
			   multiple="true"
			   label="Theme Leaders"
			   description="Add multiple Theme Leaders to the theme"
			   layout = "subform.repeatable-table"
		/>
		
         <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />
	</fieldset>

</form>
